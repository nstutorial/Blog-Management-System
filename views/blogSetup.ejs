<%- include("./layout/header.ejs") %>
<div class="container">
    <h1>Blog Setup</h1>
    <form class="" method="POST" enctype="multipart/form-data">
        <div class="row">
            <div class="col-sm-20">
                <input type="text" name="blog_title" id="" placeholder="Enter Blog title" required>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-sm-20">
                <input type="file" name="blog_image" id=""  required>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-sm-20">
                <textarea  name="description" id="" placeholder="Enter Description" required></textarea>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-sm-20">
                <input type="text" name="name" id="" placeholder="EnterAdmin Name" required>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-sm-20">
                <input type="email" name="email" id="" placeholder="Enter email" required>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-sm-20">
                <input type="password" name="password" id="" placeholder="Enter password" required>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-sm-20">
                <input type="submit" value="Blog Setup">
            </div>
        </div>

    </form>

</div>
<% 
    if(typeof message != 'undefined'){
        %>
            <p style="color: red;"><%= message %></p>
        <%
    }
%>
